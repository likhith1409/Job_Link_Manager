{
  "manifest_version": 3,
  "name": "Job Link Manager",
  "version": "1.0",
  "description": "Automatically send job links to users based on their skills.",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["http://localhost:5000/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Job Link Manager",
    "default_icon": {
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}